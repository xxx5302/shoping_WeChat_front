/* 失效处理 */
.invalid-head {
  padding: 0 30rpx;
  line-height: 90rpx;
  color: #999;
  border-bottom: 1rpx solid #efefef;
  font-size: 26rpx;
}

.invalid-card-group {
  box-shadow: none!important;
}

.invalid-head .iconfont {
  font-size: 28rpx;
}

.invalid-card-group .cart-item-content .title {
  color: #b0b0b0;
}

.invalid-tip {
  background: #c6c6c6;
  font-size: 20rpx;
  padding: 4rpx 8rpx;
  color: #fff;
  line-height: 1;
  border-radius: 6rpx;
}

.scroll-full {
  position: relative;
  overflow-x: auto;
  overflow-y: hidden;
  white-space:nowrap;
  margin-right: 5rpx;
  line-height: 34rpx;
}

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

