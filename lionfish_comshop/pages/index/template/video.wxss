.index-video {
  margin: 20rpx;
  position: relative;
  overflow: hidden;
}

.index-video .poster .img {
  width: 100%;
  border-radius: 10rpx;
}

.index-video .poster .play-img {
  width: 200rpx;
  height: 200rpx;
  position: absolute;
  top: 50%;
  left: 50%;
  margin-top: -100rpx;
  margin-left: -100rpx;
  z-index: 1;
}