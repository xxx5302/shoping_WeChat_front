  font-weight: 500;
}

.red {
  color: #ff5344;
  font-size: 24rpx;
}

.gray {
  color: #aaa;
}
.i-card {
  width: 710rpx;
  border-radius: 20rpx;
  background: #fff;
  box-shadow: 0 0 40rpx 0 rgba(0, 0, 0, 0.05);
  display: flex;
  flex-direction: column;
  overflow: hidden;
}
