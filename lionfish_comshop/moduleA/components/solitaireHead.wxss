@import "/icon.wxss";
@import "/common.wxss";

.headinfo {
  position: relative;
  padding: 30rpx;
}

.headinfo .avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}

.headinfo .share {
  position: absolute;
  top: 30rpx;
  right: 30rpx;
}

.headinfo .share .iconfont {
  font-size: 50rpx;
  margin-left: 30rpx;
  color: rgb(233, 169, 68);
}

.headinfo .share .btn {
  display: inline-block;
  line-height: inherit;
  background: transparent;
  width: auto;
  padding: 0;
  font-size: 0;
}

.headinfo .share .btn::after {
  content: none;
}
